<br />

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center">Learn something today</h1>
  <hr />
  <% @courses.each do |course| %>
    <div class="course_container">
      <h2 class="text-center"><%= link_to course.title, course_path(course) %></h2>
      <br />
        <% if course.image? %>
          <%= image_tag course.image, class: 'img-responsive course_image' %>
        <% else %>
           <%= image_tag "missing_lesson_image.jpg", class: 'img-responsive course_image' %>
        <% end %>  
      <div class="col-sm-7 col-xs-11 col-xs-offset-1">
        <%= course.description %>
      </div>
      <div class="col-sm-4 col-xs-12 text-center">
        <%= link_to 'More Details...', course_path(course), class: 'btn btn-primary btn-large' %>
      </div>
      <div class="clr"></div>
    </div>  
  <% end %>
</div>