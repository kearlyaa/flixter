<br />

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1><%= current_lesson.title %></h1>
  <p class="pull-left">
    <%= current_lesson.subtitle %>
  </p>

  <% if current_lesson.next_lesson.present? %>
    <%= link_to lesson_path(current_lesson.next_lesson), class: 'btn btn-default pull-right' do %>
      Next Lesson &nbsp;
      <span class="glyphicon glyphicon-forward"></span>
    <% end %>
  <% end %>

  <%= link_to 'View all lessons', course_path(current_lesson.section.course), class: 'view_lessons_button btn btn-default pull-right' %>

  <br class="clr" />
  <br />
  
<% if current_lesson.video? %>
 <video id="MY_VIDEO_1" class="video-js vjs-default-skin vjs-big-play-centered video_player" controls
 preload="auto" width="auto" height="auto" poster="/assets/black.jpg" data-setup="{}">
    <source src="<%= current_lesson.video.to_s %>" type='video/mp4'>
    
    <noscript>
      <p class="vjs-no-js">
        To view this video please enable JavaScript, and consider upgradiny to a web browser that 
        <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
      </p>
    </noscript>
  </video>
<% else %>
  <%= image_tag "/assets/#{@random_image_filename}", class: 'img-responsive default_video_image' %>
<% end %>

</div>